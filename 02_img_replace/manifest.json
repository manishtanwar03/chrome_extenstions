{
    "manifest_version": 2,
    "name": "dog_imgs_extension",
    "version": "1.0.0",
    "web_accessible_resources": [
        "imgs/*.jpg"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "logo.png"
    }
}